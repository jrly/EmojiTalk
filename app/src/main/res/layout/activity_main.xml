<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context="com.example.jimmy.emojitalk.MainActivity">

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:columnCount="2"
        android:paddingBottom="10dp"
        android:rowCount="3">


        <Button
            android:id="@+id/happy"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="50dp"
            android:layout_row="0"
            android:background="@drawable/happy"
            android:onClick="speak" />

        <Button
            android:id="@+id/sad"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_rowSpan="1"
            android:background="@drawable/sad"
            android:onClick="speak" />

        <Button
            android:id="@+id/angry"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_row="1"
            android:background="@drawable/angry"
            android:onClick="speak" />

        <Button
            android:id="@+id/frustrated"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_row="1"
            android:background="@drawable/frustrated"
            android:onClick="speak" />

        <Button
            android:id="@+id/scared"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="0"
            android:layout_marginLeft="15dp"
            android:layout_row="2"
            android:background="@drawable/surprised"
            android:onClick="speak" />

        <Button
            android:id="@+id/love"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_column="1"
            android:layout_row="2"
            android:background="@drawable/love"
            android:onClick="speak" />
    </GridLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:text="How are you feeling?"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:typeface="monospace" />

</android.widget.RelativeLayout>
